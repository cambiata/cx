<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="Player" package="player.Player" version="1.0.0" company="" />
	
	<!-- output -->
	<app main="player.Main" file="Player" path="bin" />
	
	<window background="#eeeeee" fps="60" />
	<window width="600" height="480" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />  
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<source path="../../src" /> 

	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="mmvc" />	
	<haxelib name="msignal" />	
	<haxelib name="mloader" />	
	<haxelib name="stablexui" />	
	<haxelib name="tjson" />	
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets/img" rename="img" />
	
	<!-- optimize output -->
	<haxeflag name="-dce std" if="haxe3" />
	
</project>